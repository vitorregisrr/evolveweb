<body>
  <div class="container-scroller">
    <%- include('../includes/navbar') %>

    <div class="container-fluid page-body-wrapper">

      <%- include('../includes/sidebar') %>

      <div class="main-panel">
        <div class="content-wrapper wow fadeIn">
          <div class="page-header">
            <h3 class="page-title">
              <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="mdi mdi-account"></i>
              </span>
              Minha conta
            </h3>
          </div>
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <form class="forms-sample">
                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group has">
                          <label for="exampleInputName1">Nome</label>
                          <input readonly type="text" class="form-control has" id="inputTitulo"
                            value="Vitor Régis de Ramos">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group has">
                          <label for="exampleInputName1">Usuário</label>
                          <input readonly type="text" class="form-control has" id="inputTitulo" value="vitorregisrr">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group has">
                          <label for="exampleInputName1">Email</label>
                          <input readonly type="text" class="form-control has" id="inputTitulo"
                            value="vitorregisr@gmail.com">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <label>Avatar</label>
                          <div class="input-group col-xs-12">
                            <input type="file" name="img[]" class="file-upload-default">
                            <input type="text" class="form-control file-upload-info" placeholder="Selecionar imagem">
                            <span class="input-group-append">
                              <button class="file-upload-browse btn btn-gradient-primary"
                                type="button">Selecionar</button>
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="float-right">

                      <button type="submit" class="btn btn-gradient-primary mr-2">Editar</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
       <%- include('../includes/footer') %>
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <%- include('../includes/plugins') %>
</body>

</html>