<%- include('../includes/head') %></head>

<body>
  <div class="container-scroller">

    <%- include('../includes/navbar') %>

    <div class="container-fluid page-body-wrapper">

      <%- include('../includes/sidebar') %>

      <div class="main-panel">
        <div class="content-wrapper wow fadeIn">
          <div class="page-header">
            <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i
                  class="mdi mdi-plus"></i></span>Novo cliente </h3>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Clientes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Novo cliente</li>
              </ol>
            </nav>
          </div>
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <%- include('../includes/forms/error') %>
                  <div class="row">
                    <div class="col-12">
                      <div class="upload_media">
                        <h4>Adicionar Outras Fotos</h4>
                        <div class="row">
                          <table class="table" border="0" cellpadding="0" cellspacing="0">
                            <thead>
                              <tr>
                                <td>Imagens</td>
                                <td>Ações</td>
                              </tr>
                            </thead>
                            <tbody id="imagesTable">
                              <% for(image of projeto.images) {%>
                              <tr>
                                <td>
                                  <div class="property-text">
                                    <img src="<%= image.secure_url %>" style="height: 100px; width: 100px; object-fit: cover">
                                  </div>
                                </td>
                                <td>
                                  <span><button type="button" data-image="<%= image.public_id %>"
                                      onclick="removeImage(this)" class="btn btn-sm btn-gradient-primary"><i class="fa fa-times" aria-hidden="true"></i>
                                      Remover</button></span>
                                </td>
                              </tr>
                              <% } %>
                            </tbody>
                          </table>
                          <button type="button" class="btn btn-sm btn-gradient-primary m-3" id="novaFoto"
                            data-toggle="modal" data-target="#novaFotoModal"><i class="mdi mdi-plus"></i>
                            </button>
                        </div>
                      </div>
                    </div>
                    <div class="col-12 mt-3">
                      <div class="float-right">
                        <a href="/admin/projetos/new" role="button" class="btn btn-gradient-primary">Novo projeto</a>
                        <a href="/admin/projetos" role="button" class="btn btn-light">Voltar para
                          projetos</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
    <%- include('../includes/footer') %>
    <%- include('../includes/modals/addImage') %>
  </div>
  <!-- main-panel ends -->
  </div>
  <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <%- include('../includes/plugins') %>
</body>

</html>